# Auto detect text files and perform LF normalization
* text=auto

# Documents
*.md text
*.txt text
*.csv text

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Config files
*.json text
*.yml text
*.yaml text
*.toml text
*.ini text

# Web files
*.html text
*.css text
*.scss text
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.vue text

# Images
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.svg text

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Documents
*.pdf binary
*.doc binary
*.docx binary

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
